{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES6",
    "moduleResolution": "node",
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true
  },
  "exclude": ["dist", "node_modules"],
  "tsup": {
    "dts": true,
    "bundle": false,
    "treeshake": true,
    "target": "node16",
    "format": ["esm", "cjs"],
    "entry": ["src/**/*.ts"]
  }
}